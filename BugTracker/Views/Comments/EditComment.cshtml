@model CommentViewModel

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Details", "Tickets", new { Model.Ticket.Id})">Edit Comment</a>
    </li>
</ol>

@using (Html.BeginForm("EditComment", "Comments", new { commentId = Model.Id }, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Comment Here", new { @class = "text-uppercase font-weight-bold" })
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Comment" })
        @Html.ValidationMessageFor(p => p.Title)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Comment</button>
    </div>
    @Html.Hidden("Id", Model.Id)
}