@model CommentViewModel

@using (Html.BeginForm("AddComment", "Comments", new { ticketId = Model.Id }, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Comment Here", new { @class = "text-uppercase font-weight-bold" })
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Comment" })
        @Html.ValidationMessageFor(p => p.Title)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Comment</button>
    </div>
    @Html.Hidden("Id", Model.Id)
}
