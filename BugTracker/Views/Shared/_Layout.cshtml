    <!DOCTYPE html>
    <html lang="en">

    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Bug-Tracker</title>

        <!-- Custom fonts for this template-->
        <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

        <!-- Page level plugin CSS-->
        <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

        <!-- Custom styles for this template-->
        <link href="~/css/sb-admin.min.css" rel="stylesheet">

    </head>

    <body id="page-top">
        @{var tickets = Session["UserTickets"] as List<Ticket>;}
        @{var projects = Session["UserProjects"] as List<Project>;}
        
            <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

                <img src="~/Image/bug-tracker.png" class="img-thumbnail" width="50" height=" 50" />
                @Html.ActionLink("Bug-Tacker", "Index", "Home", null, new { @class = "navbar-brand mr-1 ml-4" })

                <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Navbar Search -->
                <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Navbar -->
                <ul class="navbar-nav ml-auto ml-md-0">
                    <li class="nav-item dropdown mx-1">
                        <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-file fa-fw"></i>
                            <span class="badge badge-danger">@projects.Count()</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="alertsDropdown">
                            <span class="dropdown-item text-muted">Projects</span>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Projects</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                    <li class="nav-item dropdown mx-1">
                        <a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-credit-card fa-fw"></i>
                            <span class="badge badge-danger">@tickets.Count()</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="messagesDropdown">
                            <span class="dropdown-item text-muted">Tickets</span>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Tickets</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>

            </nav>

            <div id="wrapper">

                <!-- Sidebar -->
                <ul class="sidebar navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href=@Url.Action("Index", "Home")>
                            <i class="fas fa-fw fa-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UserManager", "Users")">
                                <i class="fas fa-fw fa-users"></i>
                                <span>User Manager</span>
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AllProjects", "Projects")">
                                <i class="fas fa-users"> <i class="fas fa-fw fa-archive"></i></i>
                                <span>All Projects</span>
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MyProjects", "Projects")">
                            <i class="fas fa-user"> <i class="fas fa-fw fa-archive"></i></i>
                            <span>My Projects</span>
                        </a>
                    </li>

                    @if (User.IsInRole("Submitter"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CreateTicket", "Tickets", new { userId = User.Identity.GetUserId()})">
                                <i class="fas fa-plus"> <i class="fas fa-fw fa-credit-card"></i></i>
                                <span>Create Ticket</span>
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AllTickets", "Tickets")">
                            <i class="fas fa-users"> <i class="fas fa-fw fa-credit-card"></i></i>
                            <span>All Tickets</span>
                        </a>
                    </li>

                    @if (User.IsInRole("Developer") || User.IsInRole("Submitter"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyTickets", "Tickets")">
                                <i class="fas fa-user"> <i class="fas fa-fw fa-credit-card"></i></i>
                                <span>My Tickets</span>
                            </a>
                        </li>
                    }

                </ul>

                <div id="content-wrapper">

                    <div class="container-fluid">
                        @RenderBody()

                        <!-- Sticky Footer -->
                        <footer class="sticky-footer">
                            <div class="container text-center my-auto">
                                <p class="copyright text-muted">Copyright &copy; <a href="https://www.dilrajsingh.tk" target="_blank">DilrajSingh.tk 2019</a></p>
                            </div>
                        </footer>

                    </div>
                    <!-- /.content-wrapper -->
                </div>
            </div>
            <!-- /#wrapper -->
            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <!-- Logout Modal-->
            <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                            <a class="btn btn-primary" href="login.html">Logout</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bootstrap core JavaScript-->
            <script src="~/vendor/jquery/jquery.min.js"></script>
            <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- Core plugin JavaScript-->
            <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

            <!-- Page level plugin JavaScript-->
            <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
            <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

            <!-- Custom scripts for all pages-->
            <script src="~/js/sb-admin.min.js"></script>

            <!-- JQuery Validation -->
            <script src="~/vendor/jquery/jquery.validate.min.js"></script>

    </body>

</html>
